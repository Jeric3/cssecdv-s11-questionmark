					<input type = "hidden" name = "userId" value = "3"> <!-- ATTENTION -->
					<button type = "submit">Visit</button>
				</form>
			</li>
			<li>
				Stranger 2
				<form action = "/viewProfile" method = "GET"> <!-- ATTENTION -->
					<input type = "hidden" name = "userId" value = "4"> <!-- ATTENTION -->
					<button type = "submit">Visit</button>
				</form>
			</li>
		</ul>
	</div>
	<form action = "/profile" method = "GET">
		<button type = "submit">View Own Profile</button>
	</form>
	<form action = "/settings" method = "GET">
		<button type = "submit">Settings</button>
	</form>
	<form action = "/logout" method = "POST">
		<button type = "submit">Logout</button>
	</form>
</body>